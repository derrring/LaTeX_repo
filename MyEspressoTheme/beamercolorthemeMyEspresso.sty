% Defines the colors for the MyEspresso theme
\mode<presentation>

\ProvidesPackage{beamercolorthemeMyEspresso}
\RequirePackage{e_core}


% Color definitions from your original file


\definecolor{blue_primary}{HTML}{027BAB} %#027BAB
\definecolor{blue_medium}{HTML}{0191C8}  %#0191C8
\definecolor{blue_pale}{HTML}{74C2E1}   %#74C2E1

% Set the colors for different parts of the presentation
\setbeamercolor{itemize item}{fg=blue_primary}
\setbeamercolor{alerted text}{fg=green!80!yellow}
\setbeamercolor*{palette primary}{bg=blue_primary,fg=white}
\setbeamercolor*{palette secondary}{fg=white,bg=blue_pale}
\setbeamercolor*{palette tertiary}{fg=white,bg=blue_medium}
\setbeamercolor*{palette quaternary}{fg=white,bg=yellow}
\setbeamercolor*{structure}{fg=blue_primary,bg=white}
\setbeamercolor{frametitle}{fg=blue_primary,bg=white}
\setbeamercolor{maintitle}{bg=white,fg=oxfordblue}
\setbeamercolor{block title}{bg=blue_primary}
\setbeamercolor{block body}{bg=blue_pale!15}

\mode<all>