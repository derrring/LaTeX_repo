\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{e_title_fenced_chap}[Title Fenced Chapter Style]


\renewcommand{\thepart}{\Roman{part}}

\titleformat{\part}%command
    [display]%shape
    {\normalfont\centering\large}%format
    {\thispagestyle{empty}\color{titlecolorchapter}\partname~\MakeUppercase{\thepart}}%label
    {1em}%sep
    {\color{titlecolorchapter}\MakeUppercase}%beforcode
    []

\titleformat{\chapter}[block]
  {\normalfont\bfseries\large}
  {\rule{\textwidth}{1.5pt} \newline \vspace{1ex} }{0pt}
  {\thechapter\quad \MakeUppercase}
  [\vspace{-2ex}\rule{\textwidth}{1.5pt}]   


\titleformat{name=\chapter,numberless}[block] %for unnumbered(starred*) sections
{\normalfont\bfseries\large}
{\rule{\textwidth}{1.5pt} \newline \vspace{1ex} }{0pt}
{\MakeUppercase}
[\vspace{-2ex}\rule{\textwidth}{1.5pt}]

\titlespacing*{\chapter}{0pt}{0pt}{20pt} % Left, before, after spacing
