% Defines the colors for the MyEspresso theme
\mode<presentation>

\ProvidesPackage{beamercolorthemeMyEspresso}

% Color definitions from your original file
\definecolor{oxfordblue}{RGB}{0,33,71}
\definecolor{n_darkblue}{HTML}{027BAB}
\definecolor{n_blue}{HTML}{0191C8}
\definecolor{n_paleblue}{HTML}{74C2E1}
\definecolor{n_gr}{HTML}{D1D1D1}

% Set the colors for different parts of the presentation
\setbeamercolor{itemize item}{fg=n_darkblue}
\setbeamercolor{alerted text}{fg=green!80!yellow}
\setbeamercolor*{palette primary}{bg=n_darkblue,fg=white}
\setbeamercolor*{palette secondary}{fg=white,bg=n_paleblue}
\setbeamercolor*{palette tertiary}{fg=white,bg=n_blue}
\setbeamercolor*{palette quaternary}{fg=white,bg=yellow}
\setbeamercolor*{structure}{fg=n_darkblue,bg=white}
\setbeamercolor{frametitle}{fg=n_darkblue,bg=white}
\setbeamercolor{maintitle}{bg=white,fg=oxfordblue}
\setbeamercolor{block title}{bg=n_darkblue}
\setbeamercolor{block body}{bg=n_paleblue!15}

\mode<all>